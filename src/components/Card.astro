---
interface Props {
	title: string;
	body: string;
}

const { title, body } = Astro.props;

import { Image } from 'astro:assets';
import catImage from '../../src/assets/cat.jpg';
---

<li class="card">
		<Image src={catImage} alt="cat image" class="image" />
		<h2 class="title">
			{title}
		</h2>
		<p class="description">
			{body}
		</p>
</li>
<style>
	.card {
		list-style: none;
		display: flex;
		flex-direction: column;
		padding: 16px;
		background-color: #23262d;
		border-radius: 7px;
		background-position: 100%;
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
	}
	.image {
		width: 544px;
		height: 340px;
	}
	.title{
		margin-top: 16px;
		margin: 0;
		font-size: 1.25rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	.description {
		margin-top: 0.5rem;
		margin-bottom: 0;
	}
</style>
